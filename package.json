{
  "name": "auctionhouse",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "/src/js/main.js",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prettier": "npx prettier --write pages/**/*.{html,css,js} src/**/*.{html,css,js} *.js",
    "eslint": "npx eslint 'src/js/**/*.js'",
    "eslint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install",
    "format": "npm run prettier && npm run eslint-fix",
    "update": "ncu --upgrade && npm install"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss": "8.5.6",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "terser": "^5.44.0",
    "vite": "^7.1.6",
    "vite-plugin-eslint": "^1.8.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8"
  }
}
